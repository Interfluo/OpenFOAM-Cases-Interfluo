FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 2.45;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }
	
    outlet
    {
        type            zeroGradient;
    }

    side
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    wing
    {
        type            omegaWallFunction;
        value           $internalField;
    }

}


